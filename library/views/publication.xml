<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- TREE VIEW -->
    <record id="view_publication_tree"
            model="ir.ui.view">
        <field name="name">library.publication.tree</field>
        <field name="model">library.publication</field>
        <field name="arch"
               type="xml">
            <tree colors="blue:employee_id!=False">
                <field name="name" />
                <field name="bookcase" />
                <field name="shelf" />
                <field name="position" />
                <field name="edition_year" />
                <field name="publication_format" />
                <field name="employee_id"
                       invisible="True" />
            </tree>
        </field>
    </record>

    <!-- FORM VIEW -->
    <record id="view_publication_form"
            model="ir.ui.view">
        <field name="name">library.publication.form</field>
        <field name="model">library.publication</field>
        <field name="arch"
               type="xml">
            <form>
                <sheet>
                    <div class="oe_title"
                         style="margin-bottom:20px;">
                        <label for="name"
                               class="oe_edit_only" />
                        <h1>
                        <field name="name"/>
                    </h1>
                    </div>
                    <group>
                        <group>
                            <field name="publication_format" />
                            <field name="stock_number" />
                        </group>
                        <group>
                            <field name="author_ids"
                                   widget="many2many_tags" />
                        </group>
                    </group>
                    <group>
                        <group string="Location">
                            <field name="bookcase" />
                            <field name="shelf" />
                            <field name="position" />
                        </group>
                        <group string="Edition">
                            <field name="editorial_id" />
                            <field name="edition" />
                            <field name="edition_year" />
                            <field name="tome" />
                        </group>
                        <group string="Loan">
                            <field name="employee_id" />
                            <field name="office_id"
                                   string="Office" />
                        </group>
                    </group>
                    <notebook>
                        <page string="Comments">
                            <field name="comments" />
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- WINDOW ACTION -->
    <record id="library_publications_list_action"
            model="ir.actions.act_window">
        <field name="name">Publications</field>
        <field name="res_model">library.publication</field>
        <field name="view_type">form</field>
        <field name="help"
               type="html">
            <p class="oe_view_nocontent_create">
                Click to create a new publication.
            </p>
            <p>
                No registries were found.
            </p>
        </field>
    </record>

</odoo>
